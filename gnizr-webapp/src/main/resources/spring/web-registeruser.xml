<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
	"http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

	<bean id="registerUser" class="com.gnizr.web.action.user.RegisterUser"
		singleton="false">
		<property name="userManager" ref="userManager"/>
		<property name="tokenManager" ref="tokenManager"/>
		<property name="mailSender" ref="mailSender"/>
		<property name="verifyEmailTemplate" ref="verifyEmailTemplate"/>
		<property name="notifyEmailTemplate" ref="notifyEmailTemplate"/>
		<property name="approvalEmailTemplate" ref="approvalEmailTemplate"/>
		<property name="freemarkerEngine" ref="freemarkerEngine"/>
	</bean>
	
	<bean id="activateUserAccount" class="com.gnizr.web.action.user.ActivateUserAccount"
		singleton="false">
		<property name="userManager" ref="userManager"/>
		<property name="tokenManager" ref="tokenManager"/>
	</bean>	
	
	<bean id="approveUserAccount" class="com.gnizr.web.action.user.ApproveUserAccount"
		singleton="false">
		<property name="userManager" ref="userManager"/>
		<property name="tokenManager" ref="tokenManager"/>
		<property name="mailSender" ref="mailSender"/>
		<property name="welcomeEmailTemplate" ref="welcomeEmailTemplate"/>
		<property name="freemarkerEngine" ref="freemarkerEngine"/>
	</bean>
	
	<bean id="welcomeEmailTemplate" class="org.springframework.mail.SimpleMailMessage">
  		<property name="subject" value="User Account Approved"/>
  		
  		<!--  Edit the following if you want customize the email message sent 
  		      for password recovery -->  
  		<!-- 
  		<property name="from" value="sender-of-the-email@myhost.com"/>
  		 -->      
	</bean>
	
	<bean id="verifyEmailTemplate" class="org.springframework.mail.SimpleMailMessage">
  		<property name="subject" value="Verify Email"/>
  		
  		<!--  Edit the following if you want customize the email message sent 
  		      for password recovery -->  
  		<!-- 
  		<property name="from" value="sender-of-the-email@myhost.com"/>
  		 -->      
	</bean>
	
	<bean id="notifyEmailTemplate" class="org.springframework.mail.SimpleMailMessage">
  		<property name="subject" value="Registration Pending"/>
  		
  		<!--  Edit the following if you want customize the email message sent 
  		      for password recovery -->  
  		<!-- 
  		<property name="from" value="sender-of-the-email@myhost.com"/>
  		 -->      
	</bean>
	
	<bean id="approvalEmailTemplate" class="org.springframework.mail.SimpleMailMessage">
  		<property name="subject" value="Registration Approval"/>
  		
  		<!--  Edit the following if you want customize the email message sent 
  		      for password recovery -->  
  		<!-- 
  		<property name="from" value="sender-of-the-email@myhost.com"/>
  		 -->      
	</bean>
	
</beans>