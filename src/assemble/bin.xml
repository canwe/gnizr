<assembly>
  <id>bin</id>
  <formats>
    <format>dir</format>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <moduleSets>
    <moduleSet>
      <includes>
        <include>com.gnizr:gnizr-webapp</include>
      </includes>
      <binaries>
        <outputDirectory>gnizr-${version}/gnizr</outputDirectory>
        <includeDependencies>false</includeDependencies>
        <unpack>true</unpack>
      </binaries>
    </moduleSet>
    <moduleSet>
      <includes>
        <include>com.gnizr:gnizr-db</include>
      </includes>
      <sources>        
        <fileSets>
          <fileSet>
            <directory>target/classes/sql</directory>
          </fileSet>
        </fileSets>        
        <outputDirectoryMapping>gnizr-${version}/sql</outputDirectoryMapping>
      </sources>
    </moduleSet>
  </moduleSets>
  <files>
    <file>
      <source>README.TXT</source>
      <filtered>true</filtered>
      <outputDirectory>gnizr-${version}</outputDirectory>
    </file>
    <file>
      <source>LICENSE.TXT</source>
      <outputDirectory>gnizr-${version}</outputDirectory>
    </file>
  </files>
</assembly>
